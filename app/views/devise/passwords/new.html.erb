<h1><%= t('.forgot_your_password') %></h1>

<div class="row justify-content-center">
  <div class="col-12 mt-4">
    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, local: true) do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group row">
        <div class="col col-md-6">
          <%= f.email_field :email, autofocus: true, class: 'form-control shadow rounded', placeholder: 'Email' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col col-md-6">
          <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-outline-dark' %>
        </div>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
