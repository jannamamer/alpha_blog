<table class="table">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |s| %>
      <tr>
        <th scope="row"><%= s.ticker %></th>
        <td><%= s.name %></td>
        <td><%= s.last_price %></td>
        <td>
          <%# <%= link_to 'Edit', user_stock_path(stock), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-info' %> %>
          <%= link_to 'Remove', user_stock_path(s), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-warning' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
