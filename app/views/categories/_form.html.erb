<%= render 'layouts/errors', obj: @category %>
<div class="row justify-content-center">
  <div class="col-12 mt-4">
    <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>
      <div class="form-group row">
        <div class="col-2">
          <%= f.label :name, "Category name", class: "col-form-label" %>
        </div>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
