<h1 class="text-center"><%= @category.name %></h1>
<% if user_signed_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center mt-4">Articles</h3>

<%= will_paginate @articles, list_classes: %w(pagination justify-content-center mt-3), previous_label: "Previous", next_label: "Next" %>

<%= render 'articles/article' %>
